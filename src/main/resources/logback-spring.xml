<configuration>

    <appender name="UserInterface" class="com.longx.intelligent.app.imessage.server.handler.UserInterfaceLogAppender"/>

    <encoder>
        <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %5p %pid --- [%X{spring.pid}] [%thread] %logger{36} : %msg%n</pattern>
    </encoder>

    <root level="INFO">
        <appender-ref ref="UserInterface" />
    </root>

</configuration>
